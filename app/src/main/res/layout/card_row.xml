<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:appc="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:elevation="5px"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="#FFFFFF"/>
                <ImageView
                    android:id="@+id/prod_image"
                    android:layout_width="300px"
                   android:layout_height="400px"
                    android:background="@drawable/image_placeholder"/>
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/prod_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Title"/>
            <TextView
                android:id="@+id/prod_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Desc"/>
            <TextView
                android:id="@+id/prod_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="produc rate"
                android:layout_gravity="right"
                android:foregroundGravity="right"
                android:gravity="right"/>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
